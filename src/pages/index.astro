---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>DesignByYou | AI + Design Portfolio</title>
  <link rel="stylesheet" href="/styles/global.css" />
</head>
<body>
  <Header />

  <section class="hero">
    <div class="max-w-4xl mx-auto px-4">
      <h1>AI-Powered Design for Modern Brands</h1>
      <p>Custom AI Videos • Print Design • Landing Pages • Ready-Made Templates</p>
    </div>
  </section>

  <main class="max-w-7xl mx-auto px-4 py-16">
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      <a href="/ai-content" class="service-card text-center p-6">
        <div class="card-icon">🤖</div>
        <h2 class="card-title">AI Content & Ads</h2>
        <p class="card-desc">Custom AI videos for Meta, Google & TikTok</p>
      </a>
      <a href="/graphic-design" class="service-card text-center p-6">
        <div class="card-icon">🎨</div>
        <h2 class="card-title">Graphic Design</h2>
        <p class="card-desc">Business cards, wedding invites, posters & more</p>
      </a>
      <a href="/custom-web-design" class="service-card text-center p-6">
        <div class="card-icon">🖥️</div>
        <h2 class="card-title">Web Design</h2>
        <p class="card-desc">Portfolio & landing pages that convert</p>
      </a>
      <a href="/templates" class="service-card text-center p-6">
        <div class="card-icon">🛒</div>
        <h2 class="card-title">Templates Shop</h2>
        <p class="card-desc">Ready-made designs — buy instantly on Gumroad</p>
      </a>
    </div>
  </main>

  <Footer />
</body>
</html>
