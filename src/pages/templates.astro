---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Ready-Made Templates</title>
  <link rel="stylesheet" href="/styles/global.css" />
</head>
<body>
  <Header />

  <main class="max-w-7xl mx-auto px-4 py-16">
    <h1 class="text-4xl font-bold text-center mb-16">Ready-Made Design Templates</h1>
    <p class="text-xl text-gray-600 text-center mb-16">Buy instantly. Edit in Canva. Print or share!</p>

    <!-- Business Cards -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold mb-8">💼 Business Card Templates</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="template-card">
          <img src="/images/placeholder.jpg" alt="Minimalist Business Card" class="template-img" />
          <h3 class="template-title">Minimalist Black</h3>
          <a href="https://gumroad.com/l/your-link-1" target="_blank" class="gumroad-btn">
            Buy Now – $12
          </a>
        </div>
        <div class="template-card">
          <img src="/images/placeholder.jpg" alt="Creative Gradient" class="template-img" />
          <h3 class="template-title">Creative Gradient</h3>
          <a href="https://gumroad.com/l/your-link-2" target="_blank" class="gumroad-btn">
            Buy Now – $10
          </a>
        </div>
      </div>
    </section>

    <!-- Wedding Cards -->
    <section>
      <h2 class="text-2xl font-bold mb-8">💍 Wedding Card Templates</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="template-card">
          <img src="/images/placeholder.jpg" alt="Gold Foil Wedding" class="template-img" />
          <h3 class="template-title">Gold Foil Elegance</h3>
          <a href="https://gumroad.com/l/your-link-3" target="_blank" class="gumroad-btn">
            Buy Now – $15
          </a>
        </div>
        <div class="template-card">
          <img src="/images/placeholder.jpg" alt="Floral Watercolor" class="template-img" />
          <h3 class="template-title">Floral Watercolor</h3>
          <a href="https://gumroad.com/l/your-link-4" target="_blank" class="gumroad-btn">
            Buy Now – $14
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</body>
</html>
